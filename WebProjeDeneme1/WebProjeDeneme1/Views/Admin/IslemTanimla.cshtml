@model WebProjeDeneme1.Models.Uzmanlik.YapilabilenIslem

@{
    ViewData["Title"] = "İşlem Tanımla";
}

<h2>İşlem Tanımla</h2>

<form method="post" asp-action="IslemTanimla">
    <div class="form-group">
        <label for="UzmanlikAlaniId">Uzmanlık Alanı Seçin</label>
        <select id="UzmanlikAlaniId" name="UzmanlikAlaniId" class="form-control">
            @foreach (var uzmanlikAlani in ViewBag.UzmanlikAlanlari)
            {
                <option value="@uzmanlikAlani.UzmanlikAlaniId">@uzmanlikAlani.UzmanlikAdi</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="IslemAdi">İşlem Adı</label>
        <input type="text" id="IslemAdi" name="IslemAdi" class="form-control" />
    </div>

    <div class="form-group">
        <label for="IslemUcreti">İşlem Ücreti</label>
        <input type="number" id="IslemUcreti" name="IslemUcreti" class="form-control" step="0.01" />
    </div>

    <div class="form-group">
        <label for="IslemSuresi">İşlem Süresi</label>
        <input type="time" id="IslemSuresi" name="IslemSuresi" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">İşlem Tanımla</button>
</form>

@if (ViewBag.Message != null)
{
    <div class="alert alert-info">
        @ViewBag.Message
    </div>
}

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">
        @ViewBag.ErrorMessage
    </div>
}