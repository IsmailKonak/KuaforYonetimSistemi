@model WebProjeDeneme1.Models.Personeller.Personel

@{
    ViewData["Title"] = "Personel Tanımla";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Personel Tanımla</h1>
</div>

@if (ViewBag.Message != null)
{
    <div class="alert alert-success mt-3">
        @ViewBag.Message
    </div>
}

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger mt-3">
        @ViewBag.ErrorMessage
    </div>
}

<form asp-controller="Admin" asp-action="PersonelTanimla" method="post">
    <div class="form-group  mb-2">
        <label asp-for="SalonId" class="control-label form-label">Salon</label>
        <select asp-for="SalonId" class="form-control" asp-items="@(new SelectList(ViewBag.Salonlar, "SalonId", "Konum.KonumAdi"))">
            <option value="">Salon Seçin</option>
        </select>
        <span asp-validation-for="SalonId" class="text-danger"></span>
    </div>
    <div class="form-group  mb-2">
        <label asp-for="BaslangicSaat" class="control-label form-label">Başlangıç Saati</label>
        <input asp-for="BaslangicSaat" class="form-control" type="time" />
        <span asp-validation-for="BaslangicSaat" class="text-danger"></span>
    </div>
    <div class="form-group  mb-2">
        <label asp-for="BitisSaat" class="control-label form-label">Bitiş Saati</label>
        <input asp-for="BitisSaat" class="form-control" type="time" />
        <span asp-validation-for="BitisSaat" class="text-danger"></span>
    </div>
    <div class="form-group  mb-2">
        <label asp-for="UzmanlikAlanlari" class="control-label form-label">Uzmanlık Alanları</label>
        <select asp-for="UzmanlikAlanlari" class="form-control" asp-items="@(new SelectList(ViewBag.UzmanlikAlanlari, "UzmanlikAlaniId", "UzmanlikAdi"))" multiple="multiple"></select>
        <span asp-validation-for="UzmanlikAlanlari" class="text-danger"></span>
    </div>
    <div class="form-group  mb-2">
        <input type="submit" value="Personel Tanımla" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}