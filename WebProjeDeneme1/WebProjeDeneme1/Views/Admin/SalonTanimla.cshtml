@model WebProjeDeneme1.Models.Salonlar.Salon

@{
    ViewData["Title"] = "Salon Tanımla";
}

<h2>Salon Tanımla</h2>

@if (ViewBag.Message != null)
{
        <div class="alert alert-success">
        @ViewBag.Message
        </div>
}

<form asp-action="SalonTanimla" method="post">
    <div class="form-group">
        <label asp-for="KonumId" class="control-label">Konum</label>
        <select asp-for="KonumId" class="form-control" asp-items="@(new SelectList(ViewBag.Konumlar, "KonumId", "KonumAdi"))"></select>
        <span asp-validation-for="KonumId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BaslangicSaat" class="control-label">Başlangıç Saati</label>
        <input asp-for="BaslangicSaat" class="form-control" type="time" />
        <span asp-validation-for="BaslangicSaat" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BitisSaat" class="control-label">Bitiş Saati</label>
        <input asp-for="BitisSaat" class="form-control" type="time" />
        <span asp-validation-for="BitisSaat" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Salon Tanımla" class="btn btn-primary" />
    </div>
</form>

<div>
    @ViewBag.Message
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}