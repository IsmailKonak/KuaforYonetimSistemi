@model WebProjeDeneme1.Models.Randevular.Randevu

@{
    ViewData["Title"] = "Randevu Oluştur";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Randevu Oluştur</h1>
</div>

<form method="get" asp-controller="Admin" asp-action="RandevuOlustur">
    <div class="form-group">
        <label for="SalonId" class="form-label">Salon Seçin</label> @* form-label class'ı eklendi *@
        <select id="SalonId" name="SalonId" class="form-control" asp-items="@(new SelectList(ViewBag.Salonlar ?? new List<WebProjeDeneme1.Models.Salonlar.Salon>(), "SalonId", "Konum.KonumAdi"))" onchange="this.form.submit()">
            <option value="">Salon Seçin</option>
        </select>
    </div>
</form>

@if (ViewBag.Personeller != null)
{
        <form method="get" asp-controller="Admin" asp-action="RandevuOlustur">
            <input type="hidden" name="SalonId" value="@ViewBag.SelectedSalonId" />
            <div class="form-group">
                <label for="PersonelId" class="form-label">Personel Seçin</label> @* form-label class'ı eklendi *@
                <select id="PersonelId" name="PersonelId" class="form-control" asp-items="@(new SelectList(ViewBag.Personeller ?? new List<WebProjeDeneme1.Models.Personeller.Personel>(), "PersonelId", "PersonelId"))" onchange="this.form.submit()"> @* PersonelId yerine Ad veya benzeri bir property yazılabilir *@
                    <option value="">Personel Seçin</option>
                </select>
            </div>
        </form>
}

@if (ViewBag.Islemler != null)
{
        <form method="post" asp-controller="Admin" asp-action="RandevuOlustur">
            <input type="hidden" name="SalonId" value="@ViewBag.SelectedSalonId" />
            <input type="hidden" name="PersonelId" value="@ViewBag.SelectedPersonelId" />
            <div class="form-group">
                <label for="IslemId" class="form-label">İşlem Seçin</label> @* form-label class'ı eklendi *@
                <select id="IslemId" name="IslemId" class="form-control" asp-items="@(new SelectList(ViewBag.Islemler ?? new List<WebProjeDeneme1.Models.Uzmanlik.YapilabilenIslem>(), "YapilabilenIslemlerId", "IslemAdi"))">
                    <option value="">İşlem Seçin</option>
                </select>
            </div>
            <div class="mt-3"> @* mt-3 class'ı eklendi *@
                <h4>İşlem Detayları</h4>
                <ul>
                @foreach (var islem in ViewBag.Islemler)
                {
                            <li>
                                <strong>İşlem Adı:</strong> @islem.IslemAdi,
                                <strong>Süre:</strong> @islem.IslemSuresi.ToString(@"hh\:mm"), @* Süre formatı düzeltildi *@
                                <strong>Ücret:</strong> @islem.IslemUcreti.ToString("C") @* Para birimi formatı eklendi *@
                            </li>
                }
                </ul>
            </div>

            <div class="form-group">
                <label for="Gun" class="form-label">Gün</label> @* form-label class'ı eklendi *@
                <input type="date" id="Gun" name="Gun" class="form-control" />
            </div>

            <div class="form-group">
                <label for="Saat" class="form-label">Saat</label> @* form-label class'ı eklendi *@
                <input type="time" id="Saat" name="Saat" class="form-control" />
            </div>

            <button type="submit" class="btn btn-primary">Randevu Oluştur</button>
        </form>
}

@if (ViewBag.Message != null)
{
        <div class="alert alert-info mt-3"> @* mt-3 class'ı eklendi *@
        @ViewBag.Message
        </div>
}

@if (ViewBag.ErrorMessage != null)
{
        <div class="alert alert-danger mt-3"> @* mt-3 class'ı eklendi *@
        @ViewBag.ErrorMessage
        </div>
}

<h3 class="mt-4">Mevcut Randevular</h3> @* mt-4 class'ı eklendi *@
@if (ViewBag.MevcutRandevular != null)
{
        <table class="table table-striped"> @* table-striped class'ı eklendi *@
            <thead>
                <tr>
                    <th>Salon</th>
                    <th>Personel</th>
                    <th>İşlem</th>
                    <th>Gün</th>
                    <th>Saat</th>
                    <th>Onay Durumu</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var randevu in ViewBag.MevcutRandevular)
            {
                        <tr>
                            <td>@randevu.Salon.Konum.KonumAdi</td>
                            <td>@randevu.Personel.PersonelId</td> @* Personel adı yazılabilir *@
                            <td>@randevu.Islem.IslemAdi</td>
                            <td>@randevu.Gun.ToShortDateString()</td>
                            <td>@randevu.Saat.ToString(@"hh\:mm")</td> @* Saat formatı düzeltildi *@
                            <td>@(randevu.Onaylandi ? "Onaylandı" : "Onaylanmadı")</td>
                        </tr>
            }
            </tbody>
        </table>
}

@section Scripts {
        <script>
            // Sayfa yüklendiğinde çalışacak scriptler (mevcut script'lerinizi buraya ekleyin)
        </script>
}