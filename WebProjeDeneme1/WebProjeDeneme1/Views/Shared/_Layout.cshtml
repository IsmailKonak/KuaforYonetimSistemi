<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebProjeDeneme1</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Bootstrap JS Bundle -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebProjeDeneme1.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #121212; padding: 1rem 2rem;">
            <div class="container-fluid">
                <!-- Logo -->
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index" style="color: #d4af37; font-size: 1.8rem;">Salon Yönetimi</a>

                <!-- Navbar Toggler for Mobile -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navbar Links -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <!-- Home -->
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" asp-area="" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" asp-area="" asp-controller="SalonIslemleri" asp-action="Index">Kuaförler</a>
                        </li>

                    </ul>

                    <!-- Login / My Account -->
                    <ul class="navbar-nav">
      
                        @if (User.Identity.IsAuthenticated)
                        {
                            <!-- If user is logged in -->
                            <li class="nav-item">
                                <a class="nav-link fw-bold" asp-area="" asp-controller="Home" asp-action="Index" style="color: #f5f5f5;">Hesabım</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link fw-bold" asp-area="" asp-controller="Uye" asp-action="Logout" style="color: #ffe0e0;">Çıkış Yap</a>
                            </li>
                        }
                        else
                        {
                            <!-- If user is NOT logged in -->
                            <li class="nav-item">
                                <a class="nav-link fw-bold" asp-area="" asp-controller="Uye" asp-action="Login" style="color: #f5f5f5;">Giriş Yap</a>
                            </li>
                        }
                    </ul>
                </div>

            </div>
        </nav>




    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
-    <footer class="footer text-center py-2" style="background-color: #121212; color: #f5f5f5; font-size: 0.8rem;">
        <div>&copy; @DateTime.Now.Year Salon Yönetimi. Tüm Hakları Saklıdır.</div>
    </footer>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
