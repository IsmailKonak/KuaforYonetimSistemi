<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebProjeDeneme1</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Bootstrap JS Bundle -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebProjeDeneme1.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #121212; padding: 1rem 2rem;">
            <div class="container-fluid">
                <!-- Logo -->
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index" style="color: #d4af37; font-size: 1.8rem;">Salon Yönetimi</a>

                <!-- Navbar Toggler for Mobile -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navbar Links -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <!-- Home -->
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" asp-area="" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" asp-area="" asp-controller="Home" asp-action="IsletmemDashboard">İşletmem Dashboard</a>
                        </li>

                        <!-- Salons with Hover Dropdown -->
                        <li class="nav-item dropdown position-static">
                            <a asp-area="" asp-controller="Home" asp-action="Kuaforler" class="nav-link fw-bold" id="salonsDropdown" role="button">Kuaförler</a>
                            <div class="dropdown-menu w-100 p-4" style="background-color: #1c1c1c; display: none;">
                                <div class="container text-center">
                                    <div class="row">
                                        <!-- Top Salons -->
                                        <div class="col-md-4">
                                            <a asp-area="" asp-controller="Home" asp-action="Kuaforler" class="text-decoration-none">
                                                <img src="https://via.placeholder.com/150" alt="Top Salons" class="img-fluid rounded mb-2" />
                                                <h6 style="color: #d4af37;">En İyi Kuaförler</h6>
                                            </a>
                                        </div>
                                        <!-- Favorites -->
                                        <div class="col-md-4">
                                            <a asp-area="" asp-controller="Home" asp-action="Kuaforler" class="text-decoration-none">
                                                <img src="https://via.placeholder.com/150" alt="Favorites" class="img-fluid rounded mb-2" />
                                                <h6 style="color: #d4af37;">Favorileriniz</h6>
                                            </a>
                                        </div>
                                        <!-- Custom Choice -->
                                        <div class="col-md-4">
                                            <a asp-area="" asp-controller="Home" asp-action="Kuaforler" class="text-decoration-none">
                                                <img src="https://via.placeholder.com/150" alt="Custom Choice" class="img-fluid rounded mb-2" />
                                                <h6 style="color: #d4af37;">Seçiminiz</h6>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </li>

                        <!-- Booking -->
                       @*  <li class="nav-item">
                            <a class="btn btn-warning text-dark fw-bold" asp-area="" asp-controller="Booking" asp-action="Index" style="background-color: #d4af37; border: none;">
                                Rezervasyon Yap
                            </a>
                        </li> *@
                    </ul>

                    <!-- Search Bar -->
                    <form class="d-flex me-3">
                        <input class="form-control me-2" type="search" placeholder="Kuaför veya Hizmet Ara" aria-label="Search"
                               style="background-color: #1c1c1c; color: #fff; border: 1px solid #555;">
                        <button class="btn btn-outline-light" type="submit">Ara</button>
                    </form>

                    <!-- Login / My Account -->
                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <!-- If user is logged in -->
                            <li class="nav-item">
                                <a class="nav-link fw-bold" asp-area="" asp-controller="Account" asp-action="Profile" style="color: #f5f5f5;">Hesabım</a>
                            </li>
                        }
                        else
                        {
                            <!-- If user is NOT logged in -->
                            <li class="nav-item">
                                <a class="nav-link fw-bold" asp-area="" asp-controller="Home" asp-action="LoginSignup" style="color: #f5f5f5;">Giriş Yap</a>
                            </li>
                        }
                    </ul>
                </div>

            </div>
        </nav>




    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
-    <footer class="footer text-center py-2" style="background-color: #121212; color: #f5f5f5; font-size: 0.8rem;">
        <div>&copy; @DateTime.Now.Year Salon Yönetimi. Tüm Hakları Saklıdır.</div>
    </footer>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
