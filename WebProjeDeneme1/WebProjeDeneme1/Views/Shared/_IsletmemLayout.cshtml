@* Views/Shared/İşletmem_Layout.cshtml *@
@{
    Layout = "_Layout"; // Ana layout dosyanızı referans alın
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - İşletmem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @* İşletmem sayfalarına özel CSS ekleyebilirsiniz *@
    @* <link rel="stylesheet" href="~/css/isletmem.css" asp-append-version="true" /> *@
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            @* Sidebar *@
            <nav id="sidebar" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
                <div class="position-sticky pt-3">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="" asp-controller="Home" asp-action="IsletmemDashboard">
                                <i class="bi bi-house-door-fill"></i> Genel Bakış
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="IsletmemRezervasyon">
                                <i class="bi bi-calendar-check-fill"></i> Rezervasyon Yönetimi
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="IsletmemHizmet">
                                <i class="bi bi-tags-fill"></i> Hizmet & Fiyat Yönetimi
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="IsletmemCalisan">
                                <i class="bi bi-people-fill"></i> Çalışan Yönetimi
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            @* Ana İçerik *@
            <main role="main" class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @* İşletmem sayfalarına özel script dosyaları ekleyebilirsiniz *@

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>