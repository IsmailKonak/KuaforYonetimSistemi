@model WebProjeDeneme1.Models.Kullanicilar.Uye

@{
    ViewData["Title"] = "Kayıt Ol";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg rounded-3">
                <div class="card-body p-5">
                    <h4 class="text-center text-gold mb-4">Müşteri Kaydı</h4>
                    <form asp-controller="Uye" asp-action="Register" method="post">
                        @*Controller ve action güncellendi*@
                        <div class="form-floating mb-3">
                            <input asp-for="Email" class="form-control" id="signupEmail" placeholder="name@example.com" />
                            <label for="signupEmail">E-posta</label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Password" class="form-control" type="password" id="signupPassword" placeholder="Password" />
                            <label for="signupPassword">Şifre</label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-check mb-3">
                            <input type="checkbox" class="form-check-input" id="acceptTerms">
                            <label class="form-check-label" for="acceptTerms">
                                <a href="#" class="text-secondary">Kullanıcı Sözleşmesi</a> ve <a href="#" class="text-secondary">Gizlilik Politikası</a>'nı kabul ediyorum.
                            </label>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-accent">Kayıt Ol</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* General Styling */
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #212529; /* Dark text color */
        background-color: #f8f9fa; /* Light background color */
    }

    .container {
        max-width: 1200px;
    }

    /* Color Palette */
    .text-gold {
        color: #d4af37; /* Gold - used for headings */
    }

    .text-secondary {
        color: #6c757d; /* Medium grey - used for less important text */
    }

    .text-dark {
        color: #212529; /* Dark text color */
    }

    .btn-accent {
        background-color: #d4af37; /* Gold - used for buttons */
        border-color: #d4af37;
        color: #f8f9fa; /* Light text on buttons */
    }

        .btn-accent:hover {
            background-color: #b8860b; /* Darker Gold for hover effect */
            border-color: #b8860b;
        }

    /* Form Styling */
    .form-control {
        border: 1px solid #d4af37;
        background-color: #ffffff;
        color: #212529;
    }

        .form-control:focus {
            border-color: #b8860b;
            box-shadow: 0 0 0 0.25rem rgba(212, 175, 55, 0.25);
        }

    .form-check-input:checked {
        background-color: #d4af37;
        border-color: #d4af37;
    }

    .form-check-input:focus {
        border-color: #b8860b;
        box-shadow: 0 0 0 0.25rem rgba(212, 175, 55, 0.25);
    }

    .form-floating > label {
        color: #6c757d;
    }

    /* Card Styling */
    .card {
        border: none;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}