@model IEnumerable<WebProjeDeneme1.Models.Randevular.Randevu>

@{
    ViewData["Title"] = "Randevularım";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Randevularım</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Salon</th>
            <th>Personel</th>
            <th>İşlem</th>
            <th>Gün</th>
            <th>Saat</th>
            <th>Onay Durumu</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var randevu in Model)
        {
            <tr>
                <td>@(randevu.Salon?.Konum?.KonumAdi ?? "Bilinmiyor")</td>
                <td>@randevu.Personel.PersonelId</td>
                <td>@randevu.Islem.IslemAdi</td>
                <td>@randevu.Gun.ToShortDateString()</td>
                <td>@randevu.Saat.ToString(@"hh\:mm")</td>
                <td>@(randevu.Onaylandi ? "Onaylandı" : "Onaylanmadı")</td>
            </tr>
        }
    </tbody>
</table>