@* Views/AI/Index.cshtml *@
@{
    ViewData["Title"] = "Saç Modeli Deneme";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Saç Modeli Deneme</h1>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                Tercihler
            </div>
            <div class="card-body">
                @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                {
                    <div class="alert alert-danger" role="alert">
                        @ViewBag.ErrorMessage
                    </div>
                }
                <form id="tercihForm" asp-controller="AI" asp-action="TestEt" method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="sacModeli" class="form-label">Saç Modeli</label>
                        <select id="sacModeli" name="sacModeli" class="form-select">
                            <optgroup label="Erkek Modelleri">
                                <option value="BuzzCut">Buzz Cut (Asker Tıraşı)</option>
                                <option value="UnderCut">UnderCut</option>
                                <option value="Pompadour">Pompadour</option>
                                <option value="SlickBack">Slick Back (Geriye Doğru)</option>
                                <option value="CurlyShag">Kıvırcık Shag</option>
                                <option value="WavyShag">Dalgalı Shag</option>
                                <option value="FauxHawk">Faux Hawk</option>
                                <option value="Spiky">Spiky (Diken Diken)</option>
                                <option value="CombOver">Comb-over (Yana Tarama)</option>
                                <option value="HighTightFade">High and Tight Fade</option>
                                <option value="ManBun">Man Bun (Erkek Topuzu)</option>
                                <option value="Afro">Afro</option>
                                <option value="LowFade">Low Fade</option>
                                <option value="UndercutLongHair">Uzun Saçlı Undercut</option>
                                <option value="TwoBlockHaircut">Two Block Haircut</option>
                                <option value="TexturedFringe">Dokulu Perçem</option>
                                <option value="BluntBowlCut">Blunt Bowl Cut</option>
                                <option value="LongWavyCurtainBangs">Uzun Dalgalı Perçem</option>
                                <option value="MessyTousled">Dağınık Saç</option>
                                <option value="MediumLengthWavy">Orta Uzunlukta Dalgalı</option>
                                <option value="CornrowBraids">Cornrow Örgü</option>
                                <option value="LongHairTiedUp">Uzun Saç Bağlı</option>
                                <option value="Middle-parted">Ortadan Ayrılmış</option>
                            </optgroup>
                            <optgroup label="Kadın Modelleri">
                                <option value="ShortPixieWithShavedSides">Kısa Pixie (Yanlar Kazıtılmış)</option>
                                <option value="ShortNeatBob">Kısa Düzgün Bob</option>
                                <option value="DoubleBun">Çift Topuz</option>
                                <option value="Updo">Topuz</option>
                                <option value="Spiked">Diken Diken</option>
                                <option value="bowlCut">Bowl Cut</option>
                                <option value="Chignon">Chignon (Ense Topuzu)</option>
                                <option value="PixieCut">Pixie Kesim</option>
                                <option value="SlickedBack">Geriye Doğru</option>
                                <option value="LongCurly">Uzun Kıvırcık</option>
                                <option value="CurlyBob">Kıvırcık Bob</option>
                                <option value="StackedCurlsInShortBob">Kısa Bob İçinde Katlı Bukleler</option>
                                <option value="SidePartCombOverHairstyleWithHighFade">Yandan Ayrılmış, Yüksek Fade'li</option>
                                <option value="WavyFrenchBobVibesfrom1920">Dalgalı Fransız Bob (1920'ler)</option>
                                <option value="BobCut">Bob Kesim</option>
                                <option value="ShortTwintails">Kısa İkili At Kuyruğu</option>
                                <option value="ShortCurlyPixie">Kısa Kıvırcık Pixie</option>
                                <option value="LongStraight">Uzun Düz</option>
                                <option value="LongWavy">Uzun Dalgalı</option>
                                <option value="FishtailBraid">Balıksırtı Örgü</option>
                                <option value="TwinBraids">İkili Örgü</option>
                                <option value="Ponytail">At Kuyruğu</option>
                                <option value="Dreadlocks">Rasta</option>
                                <option value="Cornrows">Cornrows (Mısır Örgüsü)</option>
                                <option value="ShoulderLengthHair">Omuz Boyu Düz Saç</option>
                                <option value="LooseCurlyAfro">Hacimli Kıvırcık Afro</option>
                                <option value="LongTwintails">Uzun İkili At Kuyruğu</option>
                                <option value="LongHimeCut">Uzun Hime Kesim</option>
                                <option value="BoxBraids">Kutu Örgü</option>
                            </optgroup>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="sacRengi" class="form-label">Saç Rengi</label>
                        <select id="sacRengi" name="sacRengi" class="form-select">
                            <option value="">Renk Seçin</option>
                            <option value="blonde">Sarışın</option>
                            <option value="platinumBlonde">Platin Sarısı</option>
                            <option value="brown">Kahverengi</option>
                            <option value="lightBrown">Açık Kahverengi</option>
                            <option value="blue">Mavi</option>
                            <option value="lightBlue">Açık Mavi</option>
                            <option value="purple">Mor</option>
                            <option value="lightPurple">Açık Mor</option>
                            <option value="pink">Pembe</option>
                            <option value="black">Siyah</option>
                            <option value="white">Beyaz</option>
                            <option value="grey">Gri</option>
                            <option value="silver">Gümüş</option>
                            <option value="red">Kızıl</option>
                            <option value="orange">Turuncu</option>
                            <option value="green">Yeşil</option>
                            <option value="gradient">Gradient</option>
                            <option value="multicolored">Çok Renkli</option>
                            <option value="darkBlue">Koyu Mavi</option>
                            <option value="burgundy">Bordo</option>
                            <option value="darkGreen">Koyu Yeşil</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="image_size" class="form-label">Sonuç Sayısı (1-4)</label>
                        <input type="number" id="image_size" name="image_size" class="form-control" min="1" max="4" value="1">
                    </div>

                    <div class="mb-3">
                        <label for="file" class="form-label">Fotoğrafınızı seçin:</label>
                        <input type="file" id="file" name="file" class="form-control" accept="image/*" required>
                    </div>

                    <button type="submit" class="btn btn-primary">Test Et</button>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-5">
        <div class="card">
            <div class="card-header">
                Fotoğraf Önizleme
            </div>
            <div class="card-body">
                <div id="yuklenenFotograf" class="mt-3">
                    @if (TempData["YuklenenFotografBase64"] != null)
                    {
                        <img src="data:image/png;base64,@TempData["YuklenenFotografBase64"]" class="img-fluid" alt="Yüklenen Fotoğraf" />
                    }
                </div>
            </div>
        </div>
        <div class="card mt-3">
            <div class="card-header">
                Sonuç
            </div>
            <div class="card-body">
                <div id="sonucFotograf" class="mt-3">
                    @if (ViewBag.SonucFotograflar != null)
                    {
                        foreach (var link in ViewBag.SonucFotograflar)
                        {
                            <img src="@link" class="img-fluid mb-2" alt="Uygulanan Saç Modeli" />
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>