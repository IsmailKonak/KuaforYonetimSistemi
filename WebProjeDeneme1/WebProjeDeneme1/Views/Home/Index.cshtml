    <style>
        /* Genel Stil */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            line-height: 1.6;
        }

        .container {
            width: 80%;
            margin: 0 auto;
            padding: 0 20px;
        }

        h1, h2, h3, h4 {
            color: #d4af37;
            /* Altın Rengi */
        }

        h3 {
            text-align: center;
            margin-bottom: 40px
        }

        a {
            text-decoration: none;
        }

        .btn {
            display: inline-block;
            background: #d4af37;
            color: #fff;
            padding: 10px 20px;
            border: none;
            cursor: pointer;
            border-radius: 5px;
        }

            .btn:hover {
                background: #b8860b;
                /* Koyu Altın Rengi */
            }

        /* Header */
        header {
            background: #333;
            color: #fff;
            padding: 10px 0;
        }

            header h1 {
                margin: 0;
            }

                header h1 a {
                    color: #d4af37;
                    text-decoration: none;
                }

        /* Hero Section */
        #hero {
            background: url('images/hero.jpg') no-repeat center center/cover;
            /* Arkaplan resmi eklenecek */
            min-height: 400px;
            color: #fff;
            text-align: center;
            padding-top: 100px;
            margin-bottom: 40px; /* Şubeler kısmı ile arayı açmak için */
        }

            #hero h2 {
                font-size: 2.5em;
                margin-bottom: 20px;
            }

            #hero p {
                font-size: 1.2em;
                margin-bottom: 30px;
            }

        /* Özellikler Section */
        #ozellikler {
            padding: 40px 0;
            background-color: #f4f4f4;
        }

        .ozellik-listesi {
            display: flex;
            justify-content: space-around;
            flex-wrap: wrap;
        }

        .ozellik {
            flex: 0 0 30%;
            text-align: center;
            padding: 20px;
            margin-bottom: 20px;
        }

            .ozellik img {
                width: 100px;
                height: 100px;
                margin-bottom: 10px;
                object-fit: cover;
            }

        /* Şubeler Section */
        #subeler {
            padding: 40px 0;
            background-color: #fff; /* Arka plan rengini değiştirerek ayrımı belirginleştirebilirsiniz */
        }

        .sube-listesi {
            display: flex;
            justify-content: space-around; /* Şubeleri yatayda eşit dağıt */
            flex-wrap: wrap; /* Gerekirse alt satıra geçebilir */
        }

        .sube {
            width: calc(33.33% - 20px); /* Üçte bir genişlik, boşlukları ayarla */
            height: auto;
            margin-right: 20px;
            margin-bottom: 20px; /* Alt boşluk eklendi */
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
            padding: 10px;
            display: flex;
            flex-direction: column;
            overflow: hidden; /* İçeriğin taşmasını engelle */
            box-sizing: border-box; /* Padding ve border genişliğe dahil olsun */
        }

            .sube:nth-child(3n) {
                margin-right: 0; /* Her satırın son elemanının sağ boşluğunu kaldır */
            }

            .sube .sube-resmi {
                width: 100%;
                height: 150px; /* Resim yüksekliği sınırlandırıldı */
                margin-bottom: 5px;
                object-fit: cover; /* Resmi boyutuna sığdır */
            }

            .sube h4 {
                margin-top: 0;
                margin-bottom: 5px;
                font-size: 1em;
                overflow: hidden;
                text-overflow: ellipsis;
                white-space: nowrap;
            }

            .sube p {
                margin-bottom: 5px;
                font-size: 0.9em;
                overflow: hidden;
                text-overflow: ellipsis;
                display: -webkit-box;
                -webkit-line-clamp: 3; /* Gösterilecek satır sayısı */
                -webkit-box-orient: vertical;
            }

