@model WebProjeDeneme1.Models.Kullanicilar.Uye

@{
    ViewData["Title"] = "Ana Sayfa";
}

<h2>Ana Sayfa</h2>

@if (User.Identity.IsAuthenticated)
{
    <p>Hoş geldiniz, @User.Identity.Name!</p>
    <form asp-action="Logout" asp-controller="Uye" method="post">
        <button type="submit" class="btn btn-primary">Çıkış Yap</button>
    </form>
}
else
{
    <div class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="#">WebProjeDeneme1</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Uye" asp-action="Login">Giriş Yap</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Uye" asp-action="Register">Üye Ol</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
}