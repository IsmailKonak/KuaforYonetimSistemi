@{
    ViewData["Title"] = "Kuaförler";
}

<div class="container mt-4">
    <!-- Search Section -->
    <div class="row mb-4 pb-4">
        <div class="col-12">
            <form class="row g-3 align-items-center">
                <div class="col-md-5">
                    <input type="text" class="form-control search-input" placeholder="Kuaför Salonu Adı veya Hizmet" />
                </div>
                <div class="col-md-3">
                    <select class="form-select search-select">
                        <option selected>Hizmet Kategorisi</option>
                        <option>Erkek</option>
                        <option>Kadın</option>
                        <option>Unisex</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-accent w-100">Ara</button>
                </div>
                <div class="col-md-2">
                    <button type="button" class="btn btn-outline-secondary w-100" data-bs-toggle="collapse" data-bs-target="#filterSection">
                        Filtreler <i class="bi bi-funnel-fill"></i>
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Filter and Card Section -->
    <div class="row mt-4">
        <!-- Left Section: Filters -->
        <div class="col-md-3 collapse show" id="filterSection">
            <h4 class="text-gold">Filtreler</h4>
            <div class="accordion" id="filtersAccordion">
                <!-- Filter Accordion Items -->
                <div class="accordion-item">
                    <h5 class="accordion-header" id="categoryHeader">
                        <button class="accordion-button filter-button" type="button" data-bs-toggle="collapse" data-bs-target="#categoryFilter" aria-controls="categoryFilter" aria-expanded="true">
                            Müşteri Kategorisi
                        </button>
                    </h5>
                    <div id="categoryFilter" class="accordion-collapse collapse show" aria-labelledby="categoryHeader">
                        <div class="accordion-body">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="category" id="male" value="male">
                                <label class="form-check-label text-dark" for="male">
                                    Erkek
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="category" id="female" value="female">
                                <label class="form-check-label text-dark" for="female">
                                    Kadın
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="category" id="unisex" value="unisex" checked>
                                <label class="form-check-label text-dark" for="unisex">
                                    Unisex (Hepsi)
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="accordion-item">
                    <h5 class="accordion-header" id="servicesHeader">
                        <button class="accordion-button filter-button collapsed text-dark" type="button" data-bs-toggle="collapse" data-bs-target="#servicesFilter" aria-controls="servicesFilter" aria-expanded="false">
                            Yapılacak İşlem
                        </button>
                    </h5>
                    <div id="servicesFilter" class="accordion-collapse collapse" aria-labelledby="servicesHeader">
                        <div class="accordion-body">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="hairCut" />
                                <label class="form-check-label text-dark" for="hairCut">Saç Kesimi</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="hairDye" />
                                <label class="form-check-label text-dark" for="hairDye">Saç Boyama</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="manicure" />
                                <label class="form-check-label text-dark" for="manicure">Manikür/Pedikür</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="blowDry" />
                                <label class="form-check-label text-dark" for="blowDry">Fön</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="bridalHair" />
                                <label class="form-check-label text-dark" for="bridalHair">Gelin Başı</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="beardTrim" />
                                <label class="form-check-label text-dark" for="beardTrim">Sakal Tıraşı</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="keratin" />
                                <label class="form-check-label text-dark" for="keratin">Keratin Bakım</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="browDesign" />
                                <label class="form-check-label text-dark" for="browDesign">Kaş/Kiprik Tasarımı</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="accordion-item">
                    <h5 class="accordion-header" id="extrasHeader">
                        <button class="accordion-button filter-button collapsed text-dark" type="button" data-bs-toggle="collapse" data-bs-target="#extrasFilter" aria-controls="extrasFilter" aria-expanded="false">
                            Ekstra Hizmetler
                        </button>
                    </h5>
                    <div id="extrasFilter" class="accordion-collapse collapse" aria-labelledby="extrasHeader" data-bs-parent="#filtersAccordion">
                        <div class="accordion-body">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="noAppointment" />
                                <label class="form-check-label text-dark" for="noAppointment">Randevusuz Hizmet</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="homeService" />
                                <label class="form-check-label text-dark" for="homeService">Evde Hizmet</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Section: Hair Salon Cards -->
        <div class="col-md-9">
            <div class="row mb-3">
                <div class="col-12 text-end">
                    <div class="btn-group" role="group" aria-label="Sorting">
                        <button type="button" class="btn btn-outline-secondary sort-button text-dark">Puana Göre</button>
                        <button type="button" class="btn btn-outline-secondary sort-button text-dark">Fiyata Göre</button>
                        <button type="button" class="btn btn-outline-secondary sort-button text-dark">En Çok Yorum Alanlar</button>
                        <button type="button" class="btn btn-outline-secondary sort-button text-dark">En Yakın Kuaförler</button>
                    </div>
                </div>
            </div>
            <div class="d-flex flex-column">
                <!-- Hair Salon Card -->
                <a asp-area="" asp-controller="Home" asp-action="Kuafor" class="card-link">
                    <div class="card mb-3 card-custom">
                        <img src="/images/openaikuafor.jpeg" class="card-img-left card-image" alt="Kuaför">
                        <div class="card-body">
                            <h5 class="card-title text-gold">OpenAI Hair Studio</h5>
                            <p class="card-text card-info">4.7 (Harika) - 1500+ Değerlendirme</p>
                            <p class="card-text card-info">Konum: İstanbul, Kadıköy, Moda</p>
                            <p class="card-text card-info">İşletme Tipi: Kuaför/Güzellik Salonu</p>
                            <p class="card-text card-info">Modern saç kesim ve boyama teknikleriyle profesyonel hizmet. Keratin bakım ve gelin başı uzmanı.</p>
                            <p class="card-text card-info">Fiyatlar 150 TL’den başlar.</p>
                            <p class="card-text card-info">Yaptığı İşlemler: Saç Kesimi, Saç Boyama, Fön...</p>

                            <a asp-area="" asp-controller="Home" asp-action="Kuafor" class="btn btn-accent">Fiyatları Gör</a>
                            <a asp-area="" asp-controller="Home" asp-action="Kuafor" class="btn btn-outline-secondary">Randevu Al</a>
                        </div>
                    </div>
                </a>
                <a asp-area="" asp-controller="Home" asp-action="Kuafor" class="card-link">
                    <div class="card mb-3 card-custom">
                        <img src="/images/Daltonlar.jpeg" class="card-img-left card-image" alt="Kuaför">
                        <div class="card-body">
                            <h5 class="card-title text-gold">Daltonlar Hair Studio</h5>
                            <p class="card-text card-info">4.7 (Harika) - 1500+ Değerlendirme</p>
                            <p class="card-text card-info">Konum: İstanbul, Kadıköy, Moda</p>
                            <p class="card-text card-info">İşletme Tipi: Kuaför/Güzellik Salonu</p>
                            <p class="card-text card-info">Modern saç kesim ve boyama teknikleriyle profesyonel hizmet. Keratin bakım ve gelin başı uzmanı.</p>
                            <p class="card-text card-info">Fiyatlar 150 TL’den başlar.</p>
                            <p class="card-text card-info">Yaptığı İşlemler: Saç Kesimi, Saç Boyama, Fön...</p>

                            <a asp-area="" asp-controller="Home" asp-action="Kuafor" class="btn btn-accent">Fiyatları Gör</a>
                            <a asp-area="" asp-controller="Home" asp-action="Kuafor" class="btn btn-outline-secondary">Randevu Al</a>
                        </div>
                    </div>
                </a>
                <a asp-area="" asp-controller="Home" asp-action="Kuafor" class="card-link">
                    <div class="card mb-3 card-custom">
                        <img src="/images/Berber Muharrem.jpg" class="card-img-left card-image" alt="Kuaför">
                        <div class="card-body">
                            <h5 class="card-title text-gold">Berber Muharrem</h5>
                            <p class="card-text card-info">4.7 (Harika) - 1500+ Değerlendirme</p>
                            <p class="card-text card-info">Konum: İstanbul, Kadıköy, Moda</p>
                            <p class="card-text card-info">İşletme Tipi: Kuaför/Berber</p>
                            <p class="card-text card-info">Modern saç kesim ve boyama teknikleriyle profesyonel hizmet. Keratin bakım ve gelin başı uzmanı.</p>
                            <p class="card-text card-info">Fiyatlar 150 TL’den başlar.</p>
                            <p class="card-text card-info">Yaptığı İşlemler: Saç Kesimi, Saç Boyama, Fön...</p>

                            <a asp-area="" asp-controller="Home" asp-action="Kuafor" class="btn btn-accent">Fiyatları Gör</a>
                            <a asp-area="" asp-controller="Home" asp-action="Kuafor" class="btn btn-outline-secondary">Randevu Al</a>
                        </div>
                    </div>
                </a>
                <!-- More Hair Salon Cards Can Be Added Here -->

            </div>
        </div>
    </div>
</div>

<!-- Bootstrap Icons CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<style>
    /* General Styling */
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #212529; /* Dark text color */
        background-color: #f8f9fa; /* Light background color */
    }

    .container {
        max-width: 1200px;
    }

    /* Color Palette */
    .text-gold {
        color: #d4af37; /* Gold - used for headings */
    }

    .text-secondary {
        color: #6c757d; /* Medium grey - used for less important text */
    }

    .text-dark {
        color: #212529; /* Dark text color */
    }

    .btn-accent {
        background-color: #d4af37; /* Gold - used for buttons */
        border-color: #d4af37;
        color: #f8f9fa; /* Light text on buttons */
    }

        .btn-accent:hover {
            background-color: #b8860b; /* Darker Gold for hover effect */
            border-color: #b8860b;
        }

    /* Search Section */
    .search-input, .search-select {
        border: 1px solid #d4af37;
        background-color: #ffffff;
        color: #212529;
    }

        .search-input:focus, .search-select:focus {
            border-color: #b8860b;
            box-shadow: 0 0 0 0.25rem rgba(212, 175, 55, 0.25);
        }

    /* Filter Section */
    .accordion-button {
        background-color: #ffffff;
    }

    .filter-button, .filter-button:not(.collapsed) {
        color: #212529;
        background-color: #ffffff;
        border-color: #d4af37;
    }

        .filter-button:hover, .filter-button:focus {
            z-index: 3;
            border-color: #b8860b;
            outline: 0;
            box-shadow: 0 0 0 0.25rem rgba(212, 175, 55, 0.25);
        }

    .accordion-item {
        border: none;
        border-bottom: 1px solid rgba(0,0,0,.125);
    }

    .accordion-body {
        background-color: #ffffff;
    }

    /* Sort Buttons */
    .sort-button {
        border-color: #d4af37;
        color: #212529;
    }

        .sort-button:hover {
            background-color: #d4af37;
            color: #ffffff;
        }

    /* Hair Salon Cards */
    .card-link {
        text-decoration: none !important; /* Remove underline */
        display: block; /* Makes the whole card clickable */
        color: inherit; /* Inherit text color from parent */
    }

        .card-link:hover {
            color: inherit; /* Prevents color change on hover */
        }

    .card-custom {
        flex-direction: row;
        border: none;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        transition: box-shadow 0.3s ease-in-out;
        background-color: #ffffff;
        border-radius: 0.5rem;
    }

        .card-custom:hover {
            box-shadow: 0 6px 12px rgba(0,0,0,0.15);
        }

    .card-image {
        width: 250px;
        height: 100%;
        object-fit: cover;
        border-top-left-radius: 0.5rem;
        border-bottom-left-radius: 0.5rem;
    }

    .card-body {
        padding: 1.25rem;
    }

    .card-title {
        font-size: 1.25rem;
        font-weight: bold;
        margin-bottom: 0.75rem;
    }

    .card-info {
        font-size: 0.9rem;
        margin-bottom: 0.5rem;
    }
</style>